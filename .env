# ============================================
# ESCAP Climate Tool - Environment Configuration
# ============================================
# This file contains all configuration variables for the application
# Change values here to update across the entire application
# Last updated: 2025-11-11

# --------------------------------------------
# APPLICATION PORTS
# --------------------------------------------
VITE_PORT=4000
PORT=5000

# --------------------------------------------
# BACKEND URLs (for Frontend - VITE_ prefix required)
# --------------------------------------------
# Production: https://escap-tools.thinkbluedata.org
# Development: http://localhost:5000
VITE_BACKEND_URL=http://localhost:5000

# Backend URL for Node.js (non-VITE, used in backend server.js)
BACKEND_URL=http://localhost:5000

# Frontend URL (used for CORS in backend)
FRONTEND_URL=http://localhost:4000

# --------------------------------------------
# GEOSERVER Configuration
# --------------------------------------------
# GeoServer URL for frontend (VITE_ prefix required)
VITE_GEOSERVER_URL=http://localhost:8081/geoserver

# GeoServer URL for backend services
GEOSERVER_URL=http://localhost:8081/geoserver

# GeoServer Authentication (backend uses GEOSERVER_USER)
GEOSERVER_USER=admin
GEOSERVER_USERNAME=admin
GEOSERVER_PASSWORD=geoserver_admin_2024

# GeoServer Workspace and Datastore
GEOSERVER_WORKSPACE=escap_climate
GEOSERVER_DATASTORE=escap_datastore
GEOSERVER_CONTAINER=escap_geoserver

# For frontend (VITE_ prefix required)
VITE_GEOSERVER_USERNAME=admin
VITE_GEOSERVER_PASSWORD=geoserver_admin_2024

# --------------------------------------------
# DATABASE Configuration
# --------------------------------------------
# Database Host
DB_HOST=localhost
DB_PORT=5432
DB_NAME=escap_climate
DB_USER=escap_user
DB_PASSWORD=escap_password_2024

# Full Database URL (used by Python services)
DATABASE_URL=postgresql://escap_user:escap_password_2024@localhost:5432/escap_climate

# --------------------------------------------
# REDIS Configuration
# --------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# --------------------------------------------
# GDAL Service Configuration
# --------------------------------------------
GDAL_SERVICE_URL=http://localhost:5001

# --------------------------------------------
# AI API Configuration
# --------------------------------------------
# FastAPI backend for AI services
AI_API_URL=http://localhost:8000/api/ai

# For frontend (VITE_ prefix required)
VITE_AI_API_URL=http://localhost:8000/api/ai

# --------------------------------------------
# ADMIN Credentials (for Frontend)
# --------------------------------------------
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_PASSWORD=climate_admin_2024

# --------------------------------------------
# PRODUCTION SETTINGS
# --------------------------------------------
# Set to 'production' when deploying
NODE_ENV=development

# Production Domain
PRODUCTION_DOMAIN=https://escap-tools.thinkbluedata.org
